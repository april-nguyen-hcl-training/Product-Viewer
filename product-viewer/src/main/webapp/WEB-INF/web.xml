<web-app>
  <display-name>Online Store</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>ShowProducts</servlet-name>
    <servlet-class>ShowProducts</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowDetails</servlet-name>
    <servlet-class>ShowDetails</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowProducts</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowDetails</servlet-name>
    <url-pattern>/view</url-pattern>
  </servlet-mapping>
</web-app>

